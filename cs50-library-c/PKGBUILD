# Maintainer: Joost Bremmer <toost dot b at gmail dot com>
pkgname=cs50-library-c
pkgver=5
pkgrel=3
pkgdesc="a C library designed to simplify tasks for user input"
arch=(any)
url="https://manual.cs50.net/library/"
license=('BSD')
makedepends=('unzip')
groups=('cs50-appliance')
options=()
install=
source=('http://mirror.cs50.net/library50/c/library50-c-'${pkgver}'.zip')
sha256sums=('43cdcc33763cb1347a89cebf468642283220aacdf47aee1fccb10fc57e9c0211')




build()
{
  ls ${srcdir}
  cd "library50-c-${pkgver}"
  gcc -c -fPIC -ggdb -std=c99 cs50.c -o cs50.o
  ar rcs libcs50.a cs50.o
  head -n 40 cs50.h > LICENSE
}


package()
{
  install -D -m 0644 "${srcdir}/library50-c-${pkgver}/cs50.h"    "${pkgdir}/usr/include/cs50.h"
  install -D -m 0644 "${srcdir}/library50-c-${pkgver}/libcs50.a" "${pkgdir}/usr/lib/libcs50.a"
  install -D -m 0644 "${srcdir}/library50-c-${pkgver}/LICENSE"   "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}


# vim: set ts=2 sw=2 et:
