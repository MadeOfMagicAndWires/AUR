pkgname=neovim-omnicppcomplete
#I know the next version will be 0.5 just to break our crap
pkgver=0.4.1
_scriptid=7722
pkgrel=1
pkgdesc="Neovim c++ completion omnifunc with a ctags database"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=1520"
license=('unknown')
depends=('neovim' 'ctags')
groups=('neovim-plugins')
install=nvim-doc.install
source=("${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
sha256sums=('7f0f3e870674458548bf219cba70ae11a5a7076399ca3fc2380982b61fb9d2da')

package() {
	cd "${srcdir}"
	installpath="${pkgdir}/usr/share/nvim/runtime"

	mkdir -p ${installpath}
	cp -r doc after autoload ${installpath}

	#just in case... make sure it's all 644
	find ${installpath} -type f -exec chmod 644 {} \;
}
